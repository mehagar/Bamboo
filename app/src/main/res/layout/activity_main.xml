<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alabama.bamboofinder2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loggedInText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MyObservations"
        android:id="@+id/myObservationsText"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignLeft="@+id/MyObservationsIButton"
        android:layout_below="@+id/MyObservationsIButton"
        android:layout_alignRight="@+id/MyObservationsIButton"
        android:layout_alignEnd="@+id/MyObservationsIButton" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/LearnMore"
        android:id="@+id/LearnMoreText"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignRight="@+id/loggedInText"
        android:layout_below="@+id/LearnMoreIButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ViewMap"
        android:id="@+id/ViewMapText"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignLeft="@+id/ViewMapIButton"
        android:layout_alignRight="@+id/ViewMapIButton"
        android:layout_alignEnd="@+id/ViewMapIButton"
        android:layout_above="@+id/ViewMapIButton" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="125dp"
        android:id="@+id/MyObservationsIButton"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/loggedInText"
        android:layout_alignLeft="@+id/loggedInText" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="125dp"
        android:id="@+id/LearnMoreIButton"
        android:layout_alignBottom="@+id/MyObservationsIButton"
        android:layout_alignRight="@+id/LearnMoreText"
        android:layout_alignEnd="@+id/LearnMoreText"
        android:layout_alignTop="@+id/MyObservationsIButton" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="125dp"
        android:id="@+id/ViewMapIButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
